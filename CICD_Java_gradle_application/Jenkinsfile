pipeline{
    agent any 
    tools {
        gradle 8.1 
    }
    stages{
        stage("sonar-qube-quality-check"){
            agent{
                docker{
                    image 'openjdk:11'
                }
            }
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-qube-new') {
                        sh 'gradle init'
                        sh 'chmod +x gradlew'
                        sh './gradlew sonarqube'
                    }
                }
            }
        }




        }
    }


    
